<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:background="@drawable/radius">
            <ImageView
                android:layout_marginLeft="150dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_more_vert_24">

            </ImageView>
            <GridLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="1"
                android:layout_gravity="center"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_marginTop="2dp">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Hallo! Reza Abdy"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Toko Apras "
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp">
            </TextView>
               <SearchView
                    android:layout_height="40dp"
                   android:layout_marginLeft="25dp"
                   android:layout_marginRight="25dp"
                    android:background="@color/white"
                    android:layout_width="match_parent">

                </SearchView>
            </GridLayout>
       </LinearLayout>
        //kotakdonasi
        <GridLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="1"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_marginTop="5dp">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:background="@color/laguna"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/laguna">
                    <TextView
                        android:layout_marginTop="15px"
                        android:layout_marginLeft="18px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Transaksi Hari ini"
                        android:textSize="30px"
                        android:textColor="@color/black">
                    </TextView>
                    <TextView
                        android:layout_marginTop="15px"
                        android:layout_marginLeft="420px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="20 Transaksi"
                        android:textSize="30px"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90px">
                    <TextView
                        android:layout_marginLeft="18px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Total Penjualan"
                        android:textSize="25px"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="125px">
                    <TextView
                        android:layout_marginLeft="18px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Rp. 500.000"
                        android:textSize="60px"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90px">
                    <TextView
                        android:layout_marginLeft="450px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Lihat Semua"
                        android:textSize="25px"
                        android:textColor="@color/green">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90px">
                    <ImageView
                        android:id="@+id/btntran"
                        android:layout_width="30px"
                        android:layout_height="20dp"
                        android:layout_marginLeft="300dp"
                        android:src="@drawable/ic_baseline_arrow_forward_24">
                    </ImageView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </GridLayout>

        //button
        <GridLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="1"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:layout_marginTop="40px"
            android:layout_marginBottom="40px"
            android:columnOrderPreserved="false">
            <Button
                android:id="@+id/btn_j"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/bumbelbe"
                android:text="Mulai Jualan"
                android:textStyle="bold">
            </Button>
        </GridLayout>
        //button

        <GridLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="1"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:layout_marginTop="32px"
            android:layout_marginBottom="32px"
            android:columnOrderPreserved="false">
            <TextView
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Semua Produk"
                android:textColor="@color/black"
                android:textSize="35px">
            </TextView>

        </GridLayout>
        //4icon
        <GridLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center"
            android:columnOrderPreserved="false">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/btn1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_grid_view_24">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelola Produk"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/btn2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_group_24">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelola Pelanggan"
                        android:textColor="@color/black">>
                    </TextView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/btn3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_local_mall_24">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jualan"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/btn4"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_description_24">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Riwayat Transaksi"
                        android:textColor="@color/black">>
                    </TextView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </GridLayout>

        //batas4icon
    </LinearLayout>
</ScrollView>
